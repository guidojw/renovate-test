{
  "extends": ["config:base", ":preserveSemverRanges", ":disableDependencyDashboard"],
  "labels": ["dependencies"],
  "rangeStrategy": "bump",
  "packageRules": [
    {
      "matchManagers": ["dockerfile", "nvm"],
      "groupName": "Node.js (non-major)",
      "groupSlug": "nodejs"
    },
    {
      "matchManagers": ["dockerfile", "nvm"],
      "groupName": "Node.js (major)",
      "groupSlug": "nodejs"
    }
  ],
  "buildkite": {
    "enabled": false
  },
  "docker-compose": {
    "enabled": false
  }
}
